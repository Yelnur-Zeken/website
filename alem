    <script>
        // Ждем загрузки DOM перед запуском скриптов
        document.addEventListener('DOMContentLoaded', function() {
            
            // Плавное появление элементов при скролле с помощью GSAP
            gsap.registerPlugin(ScrollTrigger);

            // Анимация для простых fade-in
            gsap.utils.toArray('.fade-in').forEach(el => {
                gsap.fromTo(el, 
                    { opacity: 0 }, 
                    { opacity: 1, duration: 1.5, ease: 'power2.out' }
                );
            });
            
            // Анимация для fade-in-up (появление снизу)
            gsap.utils.toArray('.fade-in-up').forEach(el => {
                gsap.fromTo(el, 
                    { opacity: 0, y: 50 },
                    {
                        opacity: 1,
                        y: 0,
                        duration: 1,
                        ease: 'power3.out',
                        scrollTrigger: {
                            trigger: el,
                            start: 'top 85%', // Анимация начнется, когда элемент появится на 85% экрана
                            toggleActions: 'play none none none'
                        }
                    }
                );
            });
            
            // Анимация для чисел в статистике
            const stats = document.querySelectorAll('.stat-item .number');
            stats.forEach(stat => {
                const endValue = parseInt(stat.textContent, 10);
                gsap.from(stat, {
                    textContent: 0,
                    duration: 2,
                    ease: 'power1.inOut',
                    snap: { textContent: 1 },
                    scrollTrigger: {
                        trigger: stat,
                        start: 'top 90%'
                    }
                });
            });

        });
    </script>
